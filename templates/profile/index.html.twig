{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="profile-page-container">
    <div class="profile-card">
        <h2 class="profile-title">Mon Profil</h2>
        <div class="profile-info">
            <p><strong>Nom :</strong> {{ user.nom }}</p>
            <p><strong>Email :</strong> {{ user.email }}</p>
            <p><strong>Rôle :</strong> {{ user.roles|join(', ') }}</p>
        </div>

        <a href="{{ path('app_logout') }}" class="logout-link">Déconnexion</a>

        <h3 class="profile-edit-title">Modifier mon profil</h3>
        <div class="profile-form">
            {{ form_start(form) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                <button class="btn-profile-save">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}