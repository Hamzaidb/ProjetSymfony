{% extends 'base.html.twig' %}

{% block title %}
    {{ produit.id ? 'Modifier le produit' : 'Ajouter un produit' }}
{% endblock %}

{% block body %}
<div class="product-edit-container">
    <div class="product-edit-card">
        <h1 class="product-edit-title">
            {{ produit.id ? 'Modifier le produit' : 'Ajouter un produit' }}
        </h1>
        {{ form_start(form) }}
            <div class="form-group">{{ form_row(form.nom) }}</div>
            <div class="form-group">{{ form_row(form.prix) }}</div>
            <div class="form-group">{{ form_row(form.description) }}</div>
            <div class="form-group">{{ form_row(form.category) }}</div>
            <button class="btn-product-save">
                {{ produit.id ? 'Enregistrer les modifications' : 'Ajouter le produit' }}
            </button>
        {{ form_end(form) }}
        <a href="{{ path('admin_dashboard') }}" class="back-link">‚Üê Retour au back office</a>
    </div>
</div>
{% endblock %}