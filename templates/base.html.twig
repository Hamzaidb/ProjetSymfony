<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SymfonyShop{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
</head>
<body>
    <header class="main-header">
        <div class="header-container">
            <a href="{{ path('app_home_page') }}" class="logo">SymfonyShop</a>
            <div class="header-right">
                {% if app.user %}
                    <span class="user-info">{{ app.user.points }} points</span>
                    <a href="{{ path('app_profile') }}" class="header-link">Profil</a>
                    {% if 'ROLE_ADMIN' in app.user.roles %}
                    <a href="{{ path('admin_dashboard') }}" class="header-link notif-link">
                        Back Office
                        {% if notifications|length > 0 %}
                            <span class="notif-badge">{{ notifications|length }}</span>
                        {% endif %}
                    </a>                    
                    {% endif %}
                    <a href="{{ path('app_logout') }}" class="header-link">DÃ©connexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="header-link">Connexion</a>
                {% endif %}
            </div>
        </div>
    </header>
    {% block body %}{% endblock %}
</body>
</html>